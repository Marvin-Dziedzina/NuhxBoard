{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Style",
  "type": "object",
  "required": [
    "BackgroundColor",
    "DefaultKeyStyle",
    "DefaultMouseSpeedIndicatorStyle",
    "ElementStyles"
  ],
  "properties": {
    "BackgroundColor": {
      "$ref": "#/definitions/NohRgb"
    },
    "BackgroundImageFileName": {
      "type": [
        "string",
        "null"
      ]
    },
    "DefaultKeyStyle": {
      "$ref": "#/definitions/KeyStyle"
    },
    "DefaultMouseSpeedIndicatorStyle": {
      "$ref": "#/definitions/MouseSpeedIndicatorStyle"
    },
    "ElementStyles": {
      "$ref": "#/definitions/CustomMap"
    }
  },
  "definitions": {
    "CustomMap": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/KeyValue"
      }
    },
    "ElementStyle": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "Loose",
            "Pressed",
            "__type"
          ],
          "properties": {
            "Loose": {
              "$ref": "#/definitions/KeySubStyle"
            },
            "Pressed": {
              "$ref": "#/definitions/KeySubStyle"
            },
            "__type": {
              "type": "string",
              "enum": [
                "KeyStyle"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "InnerColor",
            "OuterColor",
            "OutlineWidth",
            "__type"
          ],
          "properties": {
            "InnerColor": {
              "$ref": "#/definitions/NohRgb"
            },
            "OuterColor": {
              "$ref": "#/definitions/NohRgb"
            },
            "OutlineWidth": {
              "type": "integer",
              "format": "uint32",
              "minimum": 0.0
            },
            "__type": {
              "type": "string",
              "enum": [
                "MouseSpeedIndicatorStyle"
              ]
            }
          }
        }
      ]
    },
    "Font": {
      "type": "object",
      "required": [
        "FontFamily",
        "Size",
        "Style"
      ],
      "properties": {
        "FontFamily": {
          "type": "string"
        },
        "Size": {
          "type": "number",
          "format": "float"
        },
        "Style": {
          "type": "integer",
          "format": "uint8",
          "minimum": 0.0
        }
      }
    },
    "KeyStyle": {
      "type": "object",
      "required": [
        "Loose",
        "Pressed"
      ],
      "properties": {
        "Loose": {
          "$ref": "#/definitions/KeySubStyle"
        },
        "Pressed": {
          "$ref": "#/definitions/KeySubStyle"
        }
      }
    },
    "KeySubStyle": {
      "type": "object",
      "required": [
        "Background",
        "Font",
        "Outline",
        "OutlineWidth",
        "ShowOutline",
        "Text"
      ],
      "properties": {
        "Background": {
          "$ref": "#/definitions/NohRgb"
        },
        "BackgroundImageFileName": {
          "type": [
            "string",
            "null"
          ]
        },
        "Font": {
          "$ref": "#/definitions/Font"
        },
        "Outline": {
          "$ref": "#/definitions/NohRgb"
        },
        "OutlineWidth": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "ShowOutline": {
          "type": "boolean"
        },
        "Text": {
          "$ref": "#/definitions/NohRgb"
        }
      }
    },
    "KeyValue": {
      "type": "object",
      "required": [
        "Key",
        "Value"
      ],
      "properties": {
        "Key": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        },
        "Value": {
          "$ref": "#/definitions/ElementStyle"
        }
      }
    },
    "MouseSpeedIndicatorStyle": {
      "type": "object",
      "required": [
        "InnerColor",
        "OuterColor",
        "OutlineWidth"
      ],
      "properties": {
        "InnerColor": {
          "$ref": "#/definitions/NohRgb"
        },
        "OuterColor": {
          "$ref": "#/definitions/NohRgb"
        },
        "OutlineWidth": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    },
    "NohRgb": {
      "type": "object",
      "required": [
        "Blue",
        "Green",
        "Red"
      ],
      "properties": {
        "Blue": {
          "type": "number",
          "format": "float"
        },
        "Green": {
          "type": "number",
          "format": "float"
        },
        "Red": {
          "type": "number",
          "format": "float"
        }
      }
    }
  }
}