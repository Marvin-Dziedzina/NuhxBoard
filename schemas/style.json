{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Style",
  "type": "object",
  "properties": {
    "BackgroundColor": {
      "$ref": "#/$defs/NohRgb"
    },
    "BackgroundImageFileName": {
      "type": [
        "string",
        "null"
      ]
    },
    "DefaultKeyStyle": {
      "$ref": "#/$defs/DefaultKeyStyle"
    },
    "DefaultMouseSpeedIndicatorStyle": {
      "$ref": "#/$defs/MouseSpeedIndicatorStyle"
    },
    "ElementStyles": {
      "$ref": "#/$defs/CustomMap"
    }
  },
  "required": [
    "BackgroundColor",
    "DefaultKeyStyle",
    "DefaultMouseSpeedIndicatorStyle",
    "ElementStyles"
  ],
  "$defs": {
    "CustomMap": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/KeyValue"
      }
    },
    "DefaultKeyStyle": {
      "type": "object",
      "properties": {
        "Loose": {
          "$ref": "#/$defs/KeySubStyle"
        },
        "Pressed": {
          "$ref": "#/$defs/KeySubStyle"
        }
      },
      "required": [
        "Loose",
        "Pressed"
      ]
    },
    "ElementStyle": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "__type": {
              "type": "string",
              "const": "KeyStyle"
            }
          },
          "$ref": "#/$defs/KeyStyle",
          "required": [
            "__type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "__type": {
              "type": "string",
              "const": "MouseSpeedIndicatorStyle"
            }
          },
          "$ref": "#/$defs/MouseSpeedIndicatorStyle",
          "required": [
            "__type"
          ]
        }
      ]
    },
    "Font": {
      "type": "object",
      "properties": {
        "FontFamily": {
          "type": "string"
        },
        "Size": {
          "type": "number",
          "format": "float"
        },
        "Style": {
          "$ref": "#/$defs/FontStyle"
        }
      },
      "required": [
        "FontFamily",
        "Size",
        "Style"
      ]
    },
    "FontStyle": {
      "type": "integer",
      "format": "uint8",
      "minimum": 0
    },
    "KeyStyle": {
      "type": "object",
      "properties": {
        "Loose": {
          "anyOf": [
            {
              "$ref": "#/$defs/KeySubStyle"
            },
            {
              "type": "null"
            }
          ]
        },
        "Pressed": {
          "anyOf": [
            {
              "$ref": "#/$defs/KeySubStyle"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "KeySubStyle": {
      "type": "object",
      "properties": {
        "Background": {
          "$ref": "#/$defs/NohRgb"
        },
        "BackgroundImageFileName": {
          "type": [
            "string",
            "null"
          ]
        },
        "Font": {
          "$ref": "#/$defs/Font"
        },
        "Outline": {
          "$ref": "#/$defs/NohRgb"
        },
        "OutlineWidth": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "ShowOutline": {
          "type": "boolean"
        },
        "Text": {
          "$ref": "#/$defs/NohRgb"
        }
      },
      "required": [
        "Background",
        "Text",
        "Outline",
        "ShowOutline",
        "OutlineWidth",
        "Font"
      ]
    },
    "KeyValue": {
      "type": "object",
      "properties": {
        "Key": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "Value": {
          "$ref": "#/$defs/ElementStyle"
        }
      },
      "required": [
        "Key",
        "Value"
      ]
    },
    "MouseSpeedIndicatorStyle": {
      "type": "object",
      "properties": {
        "InnerColor": {
          "$ref": "#/$defs/NohRgb"
        },
        "OuterColor": {
          "$ref": "#/$defs/NohRgb"
        },
        "OutlineWidth": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        }
      },
      "required": [
        "InnerColor",
        "OuterColor",
        "OutlineWidth"
      ]
    },
    "NohRgb": {
      "type": "object",
      "properties": {
        "Blue": {
          "type": "number",
          "format": "float"
        },
        "Green": {
          "type": "number",
          "format": "float"
        },
        "Red": {
          "type": "number",
          "format": "float"
        }
      },
      "required": [
        "Red",
        "Green",
        "Blue"
      ]
    }
  }
}