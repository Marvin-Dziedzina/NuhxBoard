{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Layout",
  "type": "object",
  "properties": {
    "Elements": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/BoardElement"
      }
    },
    "Height": {
      "description": "Window height",
      "type": "number",
      "format": "float"
    },
    "Version": {
      "description": "Doesn't do anything",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint8",
      "minimum": 0
    },
    "Width": {
      "description": "Window width",
      "type": "number",
      "format": "float"
    }
  },
  "required": [
    "Width",
    "Height",
    "Elements"
  ],
  "$defs": {
    "BoardElement": {
      "description": "Union for different element types",
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "__type": {
              "type": "string",
              "const": "KeyboardKey"
            }
          },
          "$ref": "#/$defs/KeyboardKeyDefinition",
          "required": [
            "__type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "__type": {
              "type": "string",
              "const": "MouseKey"
            }
          },
          "$ref": "#/$defs/CommonDefinition",
          "required": [
            "__type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "__type": {
              "type": "string",
              "const": "MouseScroll"
            }
          },
          "$ref": "#/$defs/CommonDefinition",
          "required": [
            "__type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "__type": {
              "type": "string",
              "const": "MouseSpeedIndicator"
            }
          },
          "$ref": "#/$defs/MouseSpeedIndicatorDefinition",
          "required": [
            "__type"
          ]
        }
      ]
    },
    "CommonDefinition": {
      "type": "object",
      "properties": {
        "Boundaries": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SerializablePoint"
          }
        },
        "Id": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "KeyCodes": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint32",
            "minimum": 0
          }
        },
        "Text": {
          "type": "string"
        },
        "TextPosition": {
          "$ref": "#/$defs/SerializablePoint"
        }
      },
      "required": [
        "Id",
        "Boundaries",
        "TextPosition",
        "KeyCodes",
        "Text"
      ]
    },
    "KeyboardKeyDefinition": {
      "type": "object",
      "properties": {
        "Boundaries": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/SerializablePoint"
          }
        },
        "ChangeOnCaps": {
          "type": "boolean"
        },
        "Id": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "KeyCodes": {
          "type": "array",
          "items": {
            "type": "integer",
            "format": "uint32",
            "minimum": 0
          }
        },
        "ShiftText": {
          "type": "string"
        },
        "Text": {
          "type": "string"
        },
        "TextPosition": {
          "$ref": "#/$defs/SerializablePoint"
        }
      },
      "required": [
        "Id",
        "Boundaries",
        "TextPosition",
        "KeyCodes",
        "Text",
        "ShiftText",
        "ChangeOnCaps"
      ]
    },
    "MouseSpeedIndicatorDefinition": {
      "type": "object",
      "properties": {
        "Id": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0
        },
        "Location": {
          "$ref": "#/$defs/SerializablePoint"
        },
        "Radius": {
          "type": "number",
          "format": "float"
        }
      },
      "required": [
        "Id",
        "Location",
        "Radius"
      ]
    },
    "SerializablePoint": {
      "$schema": "https://json-schema.org/draft/2029-12/schema",
      "title": "SerializablePoint",
      "type": "object",
      "properties": {
        "X": {
          "type": "number",
          "format": "float"
        },
        "Y": {
          "type": "number",
          "format": "float"
        }
      },
      "required": [
        "X",
        "Y"
      ]
    }
  }
}